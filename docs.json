  },
  "logo": "/images/PkpayLogo.webp",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@pkpayplus.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "appearance": {
    "default": "system"
